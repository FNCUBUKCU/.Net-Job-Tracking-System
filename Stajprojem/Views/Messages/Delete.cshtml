@model Stajprojem.Models.Messages


<h2>Messages</h2>
    <h5>Are you sure you want to delete this?</h5>
    <div>

    <hr />
    <dl class="dl-horizontal">

        <dt for="MyProperty" style="color:Highlight">
            Receiver Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReceiverUser.Name)
        </dd>

        <dt for="MyProperty" style="color:Highlight">
            Sender Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SenderUser.Name)
        </dd>

        <dt for="MyProperty" style="color:Highlight">
            Send Time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SendTime)
        </dd>
        <dt for="MyProperty" style="color:Highlight">
            Message
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Delete" style="background-color:#428bca" class="btn btn-success btn-block" />
            </div>
            </div>
            }
        </div>
