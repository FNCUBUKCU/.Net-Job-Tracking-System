
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="" >
    <title>JOB TRACKING SYSTEM</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/fonts/font-awesome.min.css" rel="stylesheet" />
    <!-- Bootstrap Core CSS -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <script src="~/Scripts/SweetAlert.js"> </script> 
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              <a class="navbar-brand"  style="color:Highlight"  href="~/Home">JOB TRACKING SYSTEM</a>
           </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
               
               @if ((Session["CurrentUser"] as Users)?.Missions.Code == 1)
               {
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-tasks fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-tasks" >
               @Html.Action("Tasks", "UserWorks")
                     
                    </ul>
                    <!-- /.dropdown-tasks -->
                </li>
                }
                <li class="dropdown" style="color:Highlight">
                    @Html.Raw((Session["CurrentUser"] as Users)?.Name + " " + (Session["CurrentUser"] as Users)?.Lastname)
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            @using (Html.BeginForm("Logout", "Home", FormMethod.Post))
                            {

                                <input type="submit" value="LOGOUT" style="background-color:#428bca" class="btn btn-success btn-block" />
                            }
                        </li>
                    </ul>
               
              </li>
            <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu" style="font-size:16px">

                    <li> @Html.ActionLink("Profile", "Profile", "Users")</li>

                    @if ((Session["CurrentUser"] as Users)?.Missions.Code !=1)
                    {
                        <li> @Html.ActionLink("Personnels", "Index", "Users")</li>

                        <li> @Html.ActionLink("Works", "Index", "Works")</li>
                     }

                    @if ((Session["CurrentUser"] as Users)?.Missions.Code == 2) 
                    {
                        <li>  @Html.ActionLink("Assigments", "Index", "UserWorks") </li>
                     }
                      
                    @if ((Session["CurrentUser"] as Users)?.Missions.Code == 1)
                     {
                        <li>  @Html.ActionLink("Tasks", "Index", "Tasks") </li>
                     }

                    <li>
                        <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Definitions<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">

                            <li>@Html.ActionLink("Department", "Index", "Departments")</li>
                            
                            <li>@Html.ActionLink("Missions", "Index", "Missions")</li>
                  
                            <li>@Html.ActionLink("Activities", "Index", "Activities")</li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class=" fa fa-bar fa-envelope-square "></i> Messages<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">

                            <li>@Html.ActionLink("New Messages", "Create", "Messages")</li>  

                            <li>@Html.ActionLink("Incoming Messages", "Imessages", "Messages")</li>

                           <li>@Html.ActionLink("Outgoing Messages", "Omessages", "Messages")</li> 
                           
                        </ul>
             </ul>
        </div>
    </div>
</nav>
       
<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @RenderBody()
                
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
<!-- jQuery -->


    @RenderSection("scripts", required: false)
<!-- Bootstrap Core JavaScript -->
<script src="~/Scripts/js/bootstrap.min.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="~/Scripts/js/metisMenu.min.js"></script>
<!-- Custom Theme JavaScript -->

<script src="~/Scripts/js/sb-admin-2.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script src="~/Scripts/Default.js"></script>
</body>
</html>
