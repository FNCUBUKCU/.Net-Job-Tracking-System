@model IEnumerable<Stajprojem.Models.Users>

<h2>Personnels</h2>
@if ((Session["CurrentUser"] as Users)?.Missions.Code == 5050)
{
<p>
    @Html.ActionLink("New User", "Create")
</p>
 }
<table class="table">
    <tr style="color:Highlight">
        <th>
            <label for="MyProperty">Name</label>
        </th>
    
        <th>
            <label for="MyProperty">Email Adress</label>
        </th>
        <th>
            <label for="MyProperty">Phone Number</label>
        </th>
        <th>
            <label for="MyProperty">Department Name</label>
        </th>
        <th>
            <label for="MyProperty">Department Name</label>
        </th>
        <th>
            <label for="MyProperty">Mission Name</label>
        </th>
        <th>
            <label for="MyProperty">Activitie Name</label>
        </th>
        <th>
            <label for="MyProperty">Statu</label>
      </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
            @Html.DisplayFor(modelItem => item.Lastname)
      </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departments.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Missions.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activities.Name)
        </td>
        <td>
            @if (item.Status == "A")
            {
                @Html.Raw("Aktif")
            }
            else
            {
                @Html.Raw("Pasif")
            }
        </td>
 
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        </td>
    </tr>
}
</table>
    