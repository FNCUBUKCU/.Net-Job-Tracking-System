@model Stajprojem.Models.Users


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>My Profile</h2>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <label for="MyProperty" style="color:Highlight">Name</label>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @cols = "100", @rows = "1", @style = "width: 50%;" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <label for="MyProperty"style="color:Highlight">Last Name</label>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control", @cols = "100", @rows = "1", @style = "width: 50%;" } })
                @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })
            </div>
        </div>
        <label for="MyProperty"style="color:Highlight">Email Adress</label>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @cols = "100", @rows = "1", @style = "width: 50%;" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <label for="MyProperty"style="color:Highlight">Password</label>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @cols = "100", @rows = "1", @style = "width: 50%;", type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <label for="MyProperty"style="color:Highlight">Phone Number</label>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @cols = "100", @rows = "1", @style = "width: 50%;" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="SAVE" style="background-color:#428bca" class="btn btn-success btn-block" />
                
            </div>
        </div>
    </div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
